
 <% layout("/layouts/userBoilerplate") %> 

    <style>
        .filter {
            margin-top: 1rem;
            text-align: center;
            margin-right: 2rem;
            opacity: 0.7;
        }

        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
        }

        .book-btn {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            cursor: pointer;
        }

        .book-btn:hover {
            background-color: #0056b3;
        }
    </style>





        <div class="container mt-4">
            <div class="row g-4">
                <% allListings.forEach((listing, index)=> { %>
                    <div class="col-lg-4 col-md-6">
                        <div class="card">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= listing.title %>
                                </h5>
                                <p class="card-text text-muted"><i class="fa fa-map-marker-alt"></i>
                                    <%= listing.location %>
                                </p>
                                <p class="price">$<%= listing.price %>
                                   
                                </p>
                                <form action="/bookings" method="POST">
                                    <input type="hidden" name="resortId" value="<%= listing._id %>">
                                    <input type="hidden" name="resortName" value="<%= listing.title %>">
                                    <input type="hidden" name="resortPrice" value="<%= listing.price %>">
                                    <button type="submit" class="book-btn" >Book Now</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                   
            </div>
           
        </div>

        <script>
            let taxSwitch = document.getElementById("flexSwitchCheckDefault");
            taxSwitch.addEventListener("click", () => {
                let taxInfo = document.getElementsByClassName("tax-info");
                for (info of taxInfo) {
                    if (info.style.display != "inline") {
                        info.style.display = "inline";
                    } else {
                        info.style.display = "none";
                    }
                }
            });


          
        </script>