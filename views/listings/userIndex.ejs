<% layout("/layouts/userBoilerplate") %>

    <style>
        .filter {
            margin-top: 1rem;
            text-align: center;
            margin-right: 2rem;
            opacity: 0.7;
        }

        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
        }

        .book-btn {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            cursor: pointer;
        }

        .book-btn:hover {
            background-color: #0056b3;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            width: 400px;
            margin: 10% auto;
            text-align: center;
            position: relative;
        }

        .close-btn {
            position: absolute;
            right: 15px;
            top: 10px;
            font-size: 20px;
            cursor: pointer;
        }

        /* Card styling */
        @keyframes popUp {
            0% {
                opacity: 0;
                transform: scale(0.9) translateY(50px);
                /* Start smaller and lower */
            }

            100% {
                opacity: 1;
                transform: scale(1) translateY(0);
                /* Return to normal size and position */
            }
        }

        /* Add animation to cards */
        .card {
            animation: popUp 0.6s ease-in-out;
            /* Duration and easing for smooth effect */
            animation-delay: var(--animation-delay);
            /* Custom delay for each card */
            border-radius: 5% !important;
            border-color: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out;
        }



        .card:hover {
            box-shadow: 1px 1px 15px 1px rgba(0, 0, 0, 0.2);
        }

        .card-link {
            text-decoration: none;
        }

        .card img {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;

            height: 200px;
            object-fit: cover;
        }

       

       


        

        .price {
            font-weight: bold;
            color: #000;
        }

      

       

        /* Responsive Design */
        @media (max-width: 768px) {
            .card {
                animation: popUp 0.5s ease-in-out;
            }
        }
    </style>





    <div class="container mt-4">
        <div class="row g-4">
            <% allListings.forEach((listing, index)=> { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= listing.title %>
                            </h5>
                            <p class="card-text text-muted"><i class="fa fa-map-marker-alt"></i>
                                <%= listing.location %>
                            </p>
                            <p class="price">&#8377;<%= listing.price %>

                            </p>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <button class="book-btn"
                                    onclick="openModal('<%= listing._id %>', '<%= listing.title %>', '<%= listing.price %>')">Book
                                    Now</button>
                            </div>

                        </div>
                    </div>
                </div>
                <% }); %>

                    <div id="bookingModal" class="modal">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="bookingModalLabel">Book Your Stay</h5>
                                <span class="close-btn" onclick="closeModal()">&times;</span>
                            </div>

                            <div class="modal-body">
                                <form action="/bookings" method="POST">
                                    <div class="mb-3">
                                        <label for="checkIn" class="form-label">Check-in</label>
                                        <input type="date" class="form-control" name="checkIn" id="checkIn" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="checkOut" class="form-label">Check-out</label>
                                        <input type="date" class="form-control" name="checkOut" id="checkOut" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="people" class="form-label">No. of People</label>
                                        <input type="number" class="form-control" name="people" id="people" min="1"
                                            max="4" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="rooms" class="form-label">No. of Rooms</label>
                                        <input type="number" class="form-control" name="rooms" id="rooms" min="1"
                                            required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="roomType" class="form-label">Room Type</label>
                                        <select class="form-select" name="roomType" id="roomType">
                                            <option value="AC">AC</option>
                                            <option value="Non-AC">Non-AC</option>
                                        </select>
                                    </div>
                                    <input type="hidden" name="resortId" id="resortId">
                                    <input type="hidden" name="resortName" id="resortName">
                                    <input type="hidden" name="resortPrice" id="resortPrice">
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                                            onclick="closeModal()">Close</button>
                                        <button type="submit" class="btn btn-primary">Book</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
        </div>


    </div>


    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });

        function openModal(id, name, price) {
            document.getElementById('resortId').value = id;
            document.getElementById('resortName').value = name;
            document.getElementById('resortPrice').value = price;
            document.getElementById('bookingModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('bookingModal').style.display = 'none';
        }



    </script>